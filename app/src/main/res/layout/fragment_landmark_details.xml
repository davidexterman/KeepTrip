<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.keeptrip.keeptrip.LandmarkDetailsFragment">

    <!-- ~~~~~~~~~~~~~~~~~~ Title ~~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormDetailLabel"
            android:text="@string/landmark_details_title_text" />

        <EditText
            android:id="@+id/landmark_details_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text_size_medium" />

    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~ Photo ~~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormDetailLabel"
            android:text="@string/landmark_details_photo_text"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/landmark_details_photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/landscape"/>

    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~ Date ~~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormDetailLabel"
            android:text="@string/landmark_details_date_text" />

        <EditText
            android:id="@+id/landmark_details_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text_size_medium" />

    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~ Location ~~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormDetailLabel"
            android:text="@string/landmark_details_location_text" />

        <EditText
            android:id="@+id/landmark_details_location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_text_size_medium" />

    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~ Type ~~~~~~~~~~~~~~~~~~~ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/FormDetailLabel"
            android:text="@string/landmark_details_type_text" />

        <Spinner
            android:id="@+id/landmark_details_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:entries="@array/landmark_details_type_spinner_array"
            android:textSize="@dimen/detail_text_size_medium"/>

    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~ Description ~~~~~~~~~~~~~~~~~~~ -->
    <TextView
        style="@style/FormDetailLabel"
        android:text="@string/landmark_details_description_text" />

    <EditText
        android:id="@+id/landmark_details_description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:textSize="@dimen/detail_text_size_medium" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1">

    <Button
        android:id="@+id/landmark_details_button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_text_size_medium"
        android:text="@string/landmark_details_button_done_text"
        android:clickable="false"/>
</LinearLayout>

</LinearLayout>
