<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
    </style>

    <style name="FormDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/detail_text_size_medium</item>
    </style>

    <style name="datePickerTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar"/>

    <style name="KeepTripAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:editTextColor">@color/primary_text</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <!--<item name="android:dropDownSpinnerStyle">@style/spinnerDropDownStyle</item>-->
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <!--<item name="android:colorAccent">@color/background3</item>-->


    </style>

    <style name="SpinnerItemSpinnerItem" parent="@android:style/TextAppearance.Holo.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="spinnerDropDownStyle" parent="@android:style/Widget.Spinner.DropDown">
        <item name="android:background">@color/primary_dark</item>
    </style>


    <style name="spinnerDropDownItemStyle" parent="@android:style/Widget.Holo.Light.DropDownItem">
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/primary_text</item>
        <!--<item name="android:background">@color/icons</item>-->
        <!--<item name="android:windowTitleStyle">@style/titleBackground</item>-->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <!--<style name="titleBackground" parent="@android:style/DialogWindowTitle_Holo">-->
        <!--<item name="android:background">@color/background3</item>-->
    <!--</style>-->

</resources>
